{
  "manifest_version": 3,
  "name": "Synapcity Link Saver",
  "version": "1.0",
  "description": "Save links from YouTube, LinkedIn, and other sites to your Supabase Synapcity database.",
  "icons": {
    "16": "icons/icon16.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png",
    "default_title": "Synapcity Save"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "commands": {
    "save-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Immediately save the current tab's URL to Synapcity."
    }
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  }
}
